    <main>
        <section class="registration pt-8 mt-8">
            <div class="container">
                <div class="flex">
                    <div class="w-1/2 mx-auto">
                        <div class="form shadow rounded px-4 py-2">
                            <h2 class="text-center text-2xl py-3 uppercase">Registration</h2>
                            <form action="/registration" method="post">
                                <div class="flex justify-between gap-3">
                                    <div class="form-col w-full">
                                        <label for="" class="mb-2 block">First Name</label>
                                        <input type="text" name="firstname"
                                            class="w-full border border-black-500 outline-0 px-2 py-1 rounded">
                                    </div>
                                    <div class="form-col w-full">
                                        <label for="" class="mb-2 block">Last Name</label>
                                        <input type="text" name="lastname"
                                            class="w-full border border-black-500 outline-0 px-2 py-1 rounded">
                                    </div>
                                </div>

                                <div class="flex justify-between gap-3 mt-4">
                                    <div class="form-col w-full">
                                        <label for="" class="mb-2 block">Email</label>
                                        <input type="email" name="email"
                                            class="w-full border border-black-500 outline-0 px-2 py-1 rounded">
                                    </div>
                                    <div class="form-col w-full">
                                        <label for="" class="mb-2 block">Gender</label>
                                        <div class="flex gap-3 items-center mt-3">
                                            <div class="first-select w-full ">
                                                <label for="">Male</label>
                                                <input type="radio" name="gender" value="Male">
                                            </div>
                                            <div class="second-select w-full ">
                                                <label for="">Female</label>
                                                <input type="radio" name="gender" value="Female">
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="flex justify-between gap-3 mt-4">
                                    <div class="form-col w-full">
                                        <label for="" class="mb-2 block">DOB</label>
                                        <input type="date" name="dob"
                                            class="w-full border border-black-500 outline-0 px-2 py-1 rounded">
                                    </div>
                                    <div class="form-col w-full">
                                        <label for="" class="mb-2 block">Country</label>
                                        <select name="country" id=""
                                            class="border border-black-500 w-full px-2 py-1 rounded">
                                            <option value="IN">India</option>
                                            <option value="US">USA</option>
                                            <option value="CH">Chaina</option>
                                            <option value="JP">Japan</option>
                                            <option value="KO">Korea</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="flex justify-between gap-3 mt-4">
                                    <div class="form-col w-full">
                                        <label for="" class="mb-2 block">Phone</label>
                                        <input type="number" name="phone"
                                            class="w-full border border-black-500 outline-0 px-2 py-1 rounded"> 
                                    </div>
                                    <div class="form-col w-full">
                                        <label for="" class="mb-2 block">Pincode</label>
                                        <input type="number" name="pincode"
                                            class="w-full border border-black-500 outline-0 px-2 py-1 rounded">

                                    </div>
                                </div>

                                <div class="flex justify-between gap-3 mt-4">
                                    <div class="form-col w-full">
                                        <label for="" class="mb-2 block">Password</label>
                                        <input type="password" name="password"
                                            class="w-full border border-black-500 outline-0 px-2 py-1 rounded"> 
                                    </div>
                                    <div class="form-col w-full">
                                        <label for="" class="mb-2 block">Confirm Password</label>
                                        <input type="password" name="cnfpassword"
                                            class="w-full border border-black-500 outline-0 px-2 py-1 rounded">

                                    </div>
                                </div>
                      
                                <div class="form-col w-full mt-4">
                                    <label for="" class="mb-2 block">Address</label>
                                    <textarea type="textarea" name="address"
                                        class="w-full border border-black-500 outline-0 px-2 py-1 rounded"> </textarea>
                                </div>

                                <div class="form-col w-full">
                                    <input type="checkbox" name="active" id="agree">
                                    <label for="agree">Agree Term</label>
                                </div>

                        <div class="submit-btn mt-4 text-end">
                            <button type="submit" class="bg-sky-500 text-white px-3 py-2 rounded">Submit</button>
                        </div>
                        </form>
                    </div>
                </div>
            </div>

          
                <div class="register-sucess  w-1/2 mx-auto">
                    <div class="p-6 max-w-sm mx-auto bg-white py-3 rounded-xl shadow-lg space-x-4">
                     <p class="text-center">Your Registration Is Sucess</p>
                    </div>
              </div>
           
